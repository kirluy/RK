<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<title>发表留言</title>
		<link rel="stylesheet" type="text/css" href="/css/bootstrap.css"/>
	</head>
	<style type="text/css">
		body{background-color:  #CCCCFF;
		background-size: 100%;}
		.page-header{
			border: none;
		}
		.container{
			max-width: 970px;
		}
		.page-header h1{
			color: #337AB7;
		}
		textarea.form-control{
			height: 100px;
		}
		.w>img{
			height:45px;
			width:45px;
			
		}
		.q>img{
			height:45px;
			width:45px;
			
		}
		.home>img{
			height:45px;
			whith:45px;
		}
		.home{
			 position:fixed;    
			  
			            left:10px;  
			            top:0px;
			                
		}
	</style>
	<body>
		<div class="home"><img id="jump2" src="/images/home.png" alt=""></div>
		<div class="container">
			<div class="page-header">
				<h1 class="text-center">留言内容</h1>
			</div>
			<form  method="post">
			<!-- action="/release" -->
				
				<div class="form-group">
					<label for="message" class="w"><img src="/images/ly.png">内容:</label>
					<textarea type="text" class="form-control content" name="message" id="message" value="" placeholder="内容"></textarea>
				</div>
				<div class="form-group">
					<label for="name" class="q"><img src="/images/r.png">留言者:</label>
					<input type="text" name="name" id="name" value="" class="form-control" placeholder="昵称"/>
				</div>
				<button type="submit"  class="btn btn-info btn-lg btn-block">提交</button>
				<!-- class="btn btn-primary btn-lg pull-right -->
			</form>
		</div>
		
		<script type="text/javascript"src="http://code.jquery.com/jquery-3.6.0.min.js"></script>
		<script type="text/javascript">
		   
			$(function() {
			    $('#jump2').on('click', function() {
			        location.href = "/";
			    })
			})
		</script>
	</body>
</html>
